</nav>

<script>

  $(document).ready(function() {
      $('.menu-link').bigSlide();
  });


  $( function() {
    $( "#slider" ).slider({
      value:100,
      min: 0,
      max: 500,
      step: 50,
      slide: function( event, ui ) {
        $( "#freq" ).val("Value: "+ui.value );
      }
    });
    $( "#freq" ).val("Value: "+$( "#slider" ).slider( "value" ) );
  } );
  
</script>
